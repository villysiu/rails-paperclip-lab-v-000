<ul>
<% @songs.each do |song| %>
  <li>
 

  <% if song.album_cover.url(:thumb) != nil %>

    <%= image_tag song.album_cover.url(:thumb) %>
  <% end %>

  <%= display_artist(song) %> - <%= link_to song.title, song_path(song) %>
  </li>
<% end %>
</ul>
<br>
<%= link_to "Add New Song", new_song_path %>
